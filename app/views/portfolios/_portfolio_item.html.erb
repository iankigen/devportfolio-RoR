<div class="card">

  <%= image_tag portfolio_item.thumb_image if portfolio_item.thumb_image? %>
  <h6><%= link_to portfolio_item.title.upcase, portfolio_show_path(portfolio_item) %></h6>
  <p><%= portfolio_item.subtitle %></p>

  <p>
    <span><%= link_to "Edit", edit_portfolio_path(portfolio_item) if logged_in?(:site_admin) %></span>
    <span><%= link_to "Delete", portfolio_item, method: :delete, data: {confirm: 'Are you sure?'} if logged_in?(:site_admin) %></span>
  </p>
</div>
