<!DOCTYPE html>
<html>
<head>
  <title><%= @page_title %></title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <meta name="keywords" content="<%= @seo_content %>"/>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
<%= render 'shared/nav' %>
<hr>

<% if current_user.is_a?(User) %>
  <%= link_to "Logout", destroy_user_session_path, method: :delete %>
<% else %>
  <%= link_to "Login", new_user_session_path, method: :get %>
  |
  <%= link_to "Register", new_user_registration_path, method: :get %>

<% end %>
<%= yield %>
<hr>
<% if session[:source] %>
  Thanks for visiting me from <a href="" target="_blank"><%= session[:source] %></a>
<% end %>
</body>
</html>
