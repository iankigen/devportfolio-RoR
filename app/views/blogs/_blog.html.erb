<div class="blog-post">
  <h2 class="blog-post-title"><%= link_to blog.title.upcase, blog %></h2>
  <p class="blog-post-meta">Published <%= distance_of_time_in_words_to_now blog.created_at %> ago</p>

  <p><%= blog.body %></p>
  <hr>
  <% if logged_in?(:site_admin) %>
    <%= link_to blog.status, toggle_status_blog_path(blog) %>
    <%= link_to 'Update', edit_blog_path(blog)%>
    <%= link_to 'Delete', blog, method: :delete, data: {confirm: 'Are you sure?'}%>
  <% end %>

</div>