<div>
  <h2><%= @portfolio_item.title %></h2>
  <%= image_tag @portfolio_item.main_image if @portfolio_item.main_image? %>
  <h3><%= @portfolio_item.subtitle %></h3>
  <p><%= @portfolio_item.body %></p>
  <h4>Technologies Used</h4>
  <% @portfolio_item.technologies.each do |t| %>
    <p><%= t.name %></p>
  <% end %>
  <p>
    <span><%= link_to "Edit", edit_portfolio_path(@portfolio_item) if logged_in?(:site_admin) %></span>
    <span><%= link_to "Delete", @portfolio_item, method: :delete, data: {confirm: 'Are you sure?'} if logged_in?(:site_admin)%></span>
    <span><%= link_to "Back", portfolios_path %></span>
  </p>
</div>
