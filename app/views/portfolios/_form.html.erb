<%= form_with(model: portfolio_item, local: true) do |form| %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title ,class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= form.label :subtitle %>
    <%= form.text_field :subtitle ,class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body ,class: 'form-control', rows: 10%>
  </div>
  <h5>Technologies Used</h5>
  <hr>

  <div>
    <%= form.fields_for :technologies do |technology_f| %>
      <div class="form-group">
        <%= technology_f.label :name %>
        <%= technology_f.text_field :name ,class: 'form-control'%>
      </div>
    <% end %>
  </div>


  <div class="form-group">
    <%= form.submit 'Submit',class: 'btn btn-primary'%>
  </div>
<% end %>


